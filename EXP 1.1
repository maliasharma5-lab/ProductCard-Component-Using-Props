import React from "react";

function ProductCard({ name, price, inStock }) {
  const cardStyle = {
    border: "1px solid #ddd",
    borderRadius: "10px",
    padding: "16px",
    width: "200px",
    margin: "10px",
    textAlign: "center",
    fontFamily: "Arial, sans-serif",
    backgroundColor: "#fff",
    color: "#000"
  };

  const nameStyle = {
    fontSize: "16px",
    fontWeight: "bold",
    marginBottom: "10px"
  };

  const priceStyle = {
    margin: "6px 0",
    fontSize: "14px"
  };

  const statusStyle = {
    marginTop: "6px",
    fontSize: "14px",
    color: "#000",
    fontWeight: "500"
  };

  return (
    <div style={cardStyle}>
      <h3 style={nameStyle}>{name}</h3>
      <p style={priceStyle}>Price: ${price}</p>
      <p style={statusStyle}>
        Status: {inStock ? "In Stock" : "Out of Stock"}
      </p>
    </div>
  );
}

function App() {
  const containerStyle = {
    padding: "20px",
    textAlign: "center",
    backgroundColor: "#fff",
    color: "#000",
    minHeight: "100vh", // fill full height
    width: "100vw",     // fill full width
    margin: 0,          // no outside margins
    boxSizing: "border-box"
  };

  const productsWrapper = {
    display: "flex",
    justifyContent: "center",
    flexWrap: "wrap"
  };

  return (
    <div style={containerStyle}>
      <h2 style={{ fontFamily: "Arial, sans-serif", color: "#000" }}>
        Products List
      </h2>
      <div style={productsWrapper}>
        <ProductCard name="Wireless Mouse" price={25.99} inStock={true} />
        <ProductCard name="Keyboard" price={45.5} inStock={false} />
        <ProductCard name="Monitor" price={199.99} inStock={true} />
      </div>
    </div>
  );
}

export default App;
